{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des produits</h1>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_product_new') }}" class="btn btn-primary mb-3">Créer un nouveau produit</a>
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description|slice(0, 100) }}...</p>
                            <p class="card-text"><strong>Prix :</strong> {{ product.price }} TND</p>
                            {% if is_granted('ROLE_ADMIN') %}
                                <p class="card-text"><strong>Stock :</strong> {{ product.stock }}</p>
                            {% endif %}
                            <p class="card-text"><strong>Catégorie :</strong> {{ product.category.name }}</p>
                            
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                {% if app.user %}
                                    <form method="post" action="{{ path('app_cart_add', {'id': product.id}) }}" class="d-inline">
                                        <div class="input-group input-group-sm" style="width: 150px;">
                                            <input type="number" name="quantity" class="form-control" value="1" min="1" max="{% if is_granted('ROLE_ADMIN') %}{{ product.stock }}{% else %}10{% endif %}">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-cart-plus"></i> Ajouter
                                            </button>
                                        </div>
                                    </form>
                                {% endif %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                        <button class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        Aucun produit trouvé
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(products) }}
        </div>
    </div>
{% endblock %} 