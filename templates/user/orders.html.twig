{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Mes Commandes</h1>

    {% if orders is empty %}
        <div class="alert alert-info">
            Vous n'avez pas encore de commandes.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Produits</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.date|date('d/m/Y H:i') }}</td>
                            <td>
                                {% if order.status == 'Commande passée' %}
                                    <span class="badge bg-warning">{{ order.status }}</span>
                                {% elseif order.status == 'Commande confirmée' %}
                                    <span class="badge bg-info">{{ order.status }}</span>
                                {% else %}
                                    <span class="badge bg-success">{{ order.status }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <ul class="list-unstyled">
                                    {% for product in order.products %}
                                        <li>{{ product.name }} - {{ product.price }} TND</li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>
                                <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %} 