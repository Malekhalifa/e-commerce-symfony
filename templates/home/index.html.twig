{% extends 'base.html.twig' %}

{% block title %}TechStore - Votre boutique tech{% endblock %}

{% block body %}
<div class="container">
    <div class="jumbotron">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4">Bienvenue sur TechStore</h1>
                <p class="lead">Découvrez notre sélection de produits tech de qualité.</p>
                <a href="{{ path('app_product_index') }}" class="btn btn-light btn-lg">
                    <i class="fas fa-shopping-bag"></i> Découvrir nos produits
                </a>
            </div>
            <div class="col-md-4">
                <i class="fas fa-laptop-code fa-5x text-light"></i>
            </div>
        </div>
    </div>

    <h2 class="mt-5 mb-4">Nos catégories</h2>
    <div class="row">
        {% for category in categories %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="{{ category.image }}" class="card-img-top" alt="{{ category.name }}" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">{{ category.name }}</h5>
                        <p class="card-text">{{ category.description }}</p>
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary">
                            <i class="fas fa-arrow-right"></i> Voir les produits
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <h2 class="mt-5 mb-4">Produits en vedette</h2>
    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description|slice(0, 100) }}...</p>
                        <p class="card-text"><strong>Prix :</strong> {{ product.price }} TND</p>
                        {% if is_granted('ROLE_ADMIN') %}
                            <p class="card-text"><strong>Stock :</strong> {{ product.stock }}</p>
                        {% endif %}
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">
                                <i class="fas fa-eye"></i> Voir le produit
                            </a>
                            {% if app.user %}
                                <form method="post" action="{{ path('app_cart_add', {'id': product.id}) }}" class="d-inline">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="number" name="quantity" class="form-control" value="1" min="1" max="{% if is_granted('ROLE_ADMIN') %}{{ product.stock }}{% else %}10{% endif %}">
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    </div>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %} 