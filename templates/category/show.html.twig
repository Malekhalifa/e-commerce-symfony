{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Catégorie : {{ category.name }}</h1>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Description</h5>
                <p class="card-text">{{ category.description }}</p>

                <h5 class="card-title mt-4">Produits dans cette catégorie</h5>
                <ul class="list-group">
                    {% for product in category.products %}
                        <li class="list-group-item">
                            {{ product.name }} - {{ product.price }}TND
                        </li>
                    {% else %}
                        <li class="list-group-item">Aucun produit dans cette catégorie</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Modifier</a>
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
        </div>
    </div>
{% endblock %} 