{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - TechStore{% endblock %}

{% block body %}
    <div class="container">
        <div class="category-banner">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1>{{ category.name }}</h1>
                    <p class="lead">{{ category.description }}</p>
                </div>
                <div class="col-md-4 text-end">
                    <i class="fas fa-tags fa-4x text-light"></i>
                </div>
            </div>
        </div>

        <div class="row">
            {% for product in category.products %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description|slice(0, 100) }}...</p>
                            <p class="card-text"><strong>Prix :</strong> {{ product.price }} TND</p>
                            {% if is_granted('ROLE_ADMIN') %}
                                <p class="card-text"><strong>Stock :</strong> {{ product.stock }}</p>
                            {% endif %}
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> Voir le produit
                                </a>
                                {% if app.user %}
                                    <form method="post" action="{{ path('app_cart_add', {'id': product.id}) }}" class="d-inline">
                                        <div class="input-group input-group-sm" style="width: 150px;">
                                            <input type="number" name="quantity" class="form-control" value="1" min="1" max="{% if is_granted('ROLE_ADMIN') %}{{ product.stock }}{% else %}10{% endif %}">
                                            <button type="submit" class="btn btn-success">
                                                <i class="fas fa-cart-plus"></i>
                                            </button>
                                        </div>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Aucun produit trouvé dans cette catégorie.
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="mt-3">
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
{% endblock %} 