{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Header Section -->
        <div class="bg-primary text-white rounded-4 p-5 mb-5 position-relative overflow-hidden">
            <div class="row align-items-center position-relative z-1">
                <div class="col-md-8">
                    <h1 class="display-4 fw-bold mb-3">Modifier la catégorie</h1>
                    <p class="lead mb-0 opacity-75">Modifiez les informations de la catégorie ci-dessous</p>
                </div>
                <div class="col-md-4 text-end">
                    <i class="fas fa-folder-open fa-6x text-white-50"></i>
                </div>
            </div>
            <div class="position-absolute top-0 end-0 mt-5 me-5 opacity-25">
                <i class="fas fa-shapes fa-10x"></i>
            </div>
        </div>

        <!-- Form Section -->
        {{ form_start(form, {'attr': {'class': 'card shadow-sm border-0'}}) }}
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la catégorie'}}) }}
                        <small class="form-text text-muted">Le nom de la catégorie sera affiché dans la liste des produits.</small>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Description détaillée de la catégorie'}}) }}
                        <small class="form-text text-muted">Une brève description pour mieux identifier la catégorie.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-white p-4 d-flex gap-2 justify-content-end">
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Enregistrer
            </button>
        </div>
        {{ form_end(form) }}
    </div>

    <style>
        .bg-primary {
            background: linear-gradient(135deg, var(--bs-primary) 0%, #2c5cbe 100%);
        }
        .form-control:focus, .form-select:focus {
            border-color: var(--bs-primary);
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }
        .form-control, .form-select {
            border: 1px solid #dee2e6;
            padding: 0.75rem 1rem;
        }
        .form-label {
            margin-bottom: 0.5rem;
            color: #344767;
        }
        .form-text {
            margin-top: 0.5rem;
            font-size: 0.875rem;
        }
    </style>
{% endblock %} 